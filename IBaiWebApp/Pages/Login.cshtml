@page
@model LoginModel
@{
	ViewData["Title"] = "Login Page";
}
<div class="baseContainer">
	<div class="loginSquare">
		<form method="post">
			<label asp-for="User.UserName">Name:*</label>
			<span asp-validation-for="User.UserName"></span>
			<input asp-for="User.UserName"/><br/>
			<label asp-for="User.Password">Password:*</label>
			<span asp-validation-for="User.Password"></span>
			<input asp-for="User.Password"/><br/>
			<div class="button_container">
				<input type="submit" value="Submit"/>
			</div>
		</form>
	</div>
</div>